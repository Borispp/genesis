.contact-form
  float right
  width 100%
  max-width 590px

  .contact-form-heder
    font-size 0
    margin-top -12px
    margin-bottom 40px

    &:before,
    &:after
      content ''
      display inline-block
      vertical-align middle
      border-bottom 1px solid $white
      width calc(50% - 110px)
      margin-top 40px

    h3
      display inline-block
      text-align center
      width 220px
      vertical-align middle
      font-size 17px
      padding 4px 0
      color $white
      position relative
      top 20px

  fieldset
    margin-bottom 30px

  .contact-form-half
    position relative
    clearfix()
    p
      width 50%
      float left
      box-sizing border-box

      &:first-child
        padding-right 30px

      .input
        width 100%

  .contact-form-full
    position relative

    textarea
      width 100%
      height 300px

  .contact-form-textarea
    padding 20px 12px 12px 48px

  .contact-form-submit
    margin-top -41px
    button
      cursor pointer
      position relative
      width 100%
      background $yellow
      border none
      padding 12px 0
      font-weight 700
      font-family 'Proxima Nova'
      font-size 14px
      transition background .15s

      &:hover
        background $yellow-dark

      &:active
        top 1px
        background $yellow-light

  .icon
    position absolute
    top 20px
    left 15px

.textarea-with-counter
  .textarea-counter
    right 60px
    top -11px

.textarea-counter
  display block
  position absolute
  background $yellow
  width 44px
  height 44px
  padding-top 9px
  box-sizing border-box
  border-radius 50%
  font-family 'Proxima Nova'
  text-align center
  line-height 5px

  .textarea-num
    font-size 15px
    line-height 18px
    font-weight 700
    display block

  span
    font-size 9px

.input,
.textarea
  font-family 'Proxima Nova'
  resize none
  box-sizing border-box
  border none
  border-radius 0px

  &.white
    background $white

    +placeholder()
      color #bfbfbf

  &.large
    padding 12px

@media (max-width 600px)
  .contact-form .contact-form-half
    margin-bottom 0

    p
      padding 0 !important
      margin-bottom 30px
      width 100%

  .textarea-with-counter .textarea-counter
    right 10px
