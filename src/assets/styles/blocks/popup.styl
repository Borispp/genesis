div.clip
  background url('../images/content/sign_mask.png')
  background-size 607px 511px
  width 607px
  height 511px
  position absolute
  left 50%
  top 50%
  transform translate(-50%, -50%)

  &.-login
    background url('../images/content/login_bg.png')
    background-size 466px 391px
    width 466px
    height 391px

    .bigPopup
      width 330px
      margin 70px 0 40px 90px

      .closePopup
        top -42px
        right -12px

      fieldset
        margin-bottom 8px

      .button_square
        width calc(100% - 30px)
        borderbox()
        text-align center

      .-half, .searchCountries
        width 150px
        display inline-block
        vertical-align top

      .searchCountries
        width 135px
        margin-right 12px

        input
          padding 38px 12px 16px 18px

          &:focus
            border-color #1f5afb

        .countriesList
          border-color #1f5afb

        label
          font-family 'IntroBookBold'
          font-size 14px
          color #2379FF
          line-height 22px
          position absolute
          z-index 12
          margin 16px 0 0 20px

      .-hint
        font-size 14px
        padding 26px 0 12px

        label
          font-size 16px
          position relative
          top 2px

      .-hint_code
        font-size 14px
        color #09073F
        line-height 23px
        padding-left 18px
        padding-top 8px

      .input_large
        width 150px

        input
          color #000
          padding 42px 24px 18px

        label
          transform translate(24px, 14px)

    .message
      margin 8px 0 -12px

.-download

  .bigPopup
    margin 60px 0 40px 72px !important

    .closePopup
      top -32px !important
      right -28px !important

  h2
    text-align center

  .download--message
    font-size 16px
    color #000
    line-height 22px
    text-align center

  .download--qr
    text-align center
    padding-top 18px

    p
      display inline-block
      &:first-child {
        margin-right 60px
      }

      span
        display block
        font-size 16px
        padding-top 4px

  .show_download
    text-align center
    padding-top 12px

    a
      font-size 14px
      color #1F5AFB
      line-height 30px
      border-bottom 1px dotted #1F5AFB

      &:hover
        border-bottom none
        color #658AEC

  .download--buttons
    text-align center
    margin-top 12px

    a
      width auto !important
      display inline-block
      margin-top 12px


#check
  div.clip
    background url('../images/content/check_mask.png')
    background-size 607px 613px
    width 607px
    height 613px

  .bigPopup
    margin-top 100px

  .closePopup
    top -60px

.imagePopup
  position fixed
  z-index 9999
  top 50%
  left 50%
  transform translate(-50%, -50%) scale(0)
  transition transform 0.2s

  .close
    position absolute
    top -36px
    right -36px
    opacity 0.7
    sprite($s-close_big)
    transition opacity 0.2s

    &:hover
      opacity 1

  img
    max-width 100vw
    max-height 100vw

  &.-show
    transform translate(-50%, -50%) scale(1)
