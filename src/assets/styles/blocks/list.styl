.consulting-list
	padding-top 30px
	font-size 0
	display:flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
	align-content: space-between;
	align-items: flex-start;

	li
		font-size 14px
		width 33.3%
		max-width 300px
		text-align center
		box-sizing border-box
		padding 0 24px

		h3
			font-size 17px
			line-height 18px
			font-weight 400
			max-width 250px
			margin 0 auto 12px

		p
			line-height 18px

	.consulting-list-icon
		height 82px
		text-align center

		span
			display inline-block
			vertical-align top

.services-list
	padding-top 40px
	margin-bottom -110px
	font-size 0

	li
		text-align center
		display inline-block
		vertical-align top
		width 33.3%
		padding 0 36px 110px
		box-sizing border-box

	.services-image
		display inline-block
		vertical-align top
		width 226px
		height 226px
		overflow hidden
		border-radius 50%
		margin-bottom 24px

	.services-headline
		font-size 24px
		line-height 24px
		font-family Vollkorn
		padding 0 36px 24px
		min-height 50px

	.services-text
		font-size 12px
		line-height 16px
		font-family 'Proxima Nova'
		padding 0 40px

		a
			font-weight 700
			color $blue

			&:hover
				text-decoration none

.services-slider
	padding-bottom 60px

	.slick-next,
	.slick-prev
		position absolute
		z-index 1
		top auto
		bottom -35px
		sprite($s-arrow)

		&:hover
			sprite($s-arrow)

		&:before
			content ''

	.slick-prev
		left calc(50% - 200px)

	.slick-next
		left calc(50% + 200px)
		transform rotate(180deg) translate(0, -9px)
		transform-origin top left

.team-slider
	padding-top 10px
	position relative

	&:before, &:after
		content ''
		position absolute
		z-index 1
		top 0
		left 0
		width 30%
		height 100%
		background: -moz-linear-gradient(left, rgba(255,255,255,1) 0%, rgba(255,255,255,0.65) 58%, rgba(255,255,255,0) 100%); /* FF3.6-15 */
		background: -webkit-linear-gradient(left, rgba(255,255,255,1) 0%,rgba(255,255,255,0.65) 58%,rgba(255,255,255,0) 100%); /* Chrome10-25,Safari5.1-6 */
		background: linear-gradient(to right, rgba(255,255,255,1) 0%,rgba(255,255,255,0.65) 58%,rgba(255,255,255,0) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

	&:after
		left auto
		right 0
		transform rotate(180deg)

	.team-content
		box-sizing border-box
		padding 24px
		text-align center
		background #bfbfbf
		min-height 320px

		.team-name
			font-family Vollkorn
			font-weight 500
			font-size 25px
			padding-bottom 8px

		.team-description
			font-family 'Proxima Nova'
			font-weight 500
			font-size 16px
			line-height 20px

	.slick-active + .slick-active .team-content
		background $yellow

	.slick-active + .slick-active + .slick-active .team-content
		background #bfbfbf

	.slick-prev, .slick-next
		top 265px
		background $blue-light
		width 68px
		height 68px
		border-radius 50%
		z-index 2
		transition background .15s

		&:hover
			background $blue

		&:before
			content ''
			display inline-block
			sprite($s-arrow2)
			opacity 1

	.slick-next:before
		transform rotate(180deg)

	.slick-prev
		left 30%

	.slick-next
		right 30%


.photos-types
	text-align center
	padding-bottom 54px

	li
		display inline-block
		vertical-align middle
		margin 0 18px

		a
			display inline-block
			padding 3px 3px 1px
			font-family Vollkorn
			font-size 17px
			color #b3b3b3
			text-decoration none

			&.active, &:hover
				background $yellow
				color $black

.photos-list
	font-size 0

	li
		display inline-block
		position relative
		width 25%
		height 25vw
		background-size cover
		background-position center center

		a
			position absolute
			display block
			text-align center
			width 100%
			height 100%
			top 0
			left 0
			background rgba(255,252,0,.8)
			color $black
			text-decoration none
			opacity 0
			transition opacity .15s

			.icon
				position absolute
				top 50%
				left 50%
				transform translate(-50%, -50%)

			.photos-list-suggestion
				font-size 17px
				font-family 'Proxima Nova'
				font-weight 700
				border-bottom 1px solid $black
				position relative
				top calc(50% + 36px)

			.photos-list-clinic
				position absolute
				display block
				width 100%
				bottom 8px
				text-align center
				font-family Vollkorn
				font-size 14px

			&:hover
				opacity 1


.reviews-list
	padding-top 30px
	margin-bottom -10px

	li
		padding-bottom 40px
		margin-bottom 40px
		background-image: linear-gradient(to right, #999 33%, rgba(255,255,255,0) 0%);
		background-position: bottom;
		background-size: 6px 2px;
		background-repeat: repeat-x;
		clearfix()

		.reviews-avatar
			float left
			width 160px
			box-sizing border-box
			border-right 2px solid $black

		.reviews-avatar-image
			width 116px
			height 116px
			border-radius 50%
			overflow hidden

			img
				width 100%
				height 100%

		.reviews-content
			float left
			width calc(100% - 160px)
			box-sizing border-box
			padding-left 36px

		.reviews-headline
			font-family Vollkorn
			font-size 20px
			color $black
			padding-bottom 6px

		.reviews-name
			color $black
			display inline-block
			margin-right 6px

		.reviews-date
			color $gray-drak
			display inline-block
			margin-left 6px

		.reviews-text
			font-family 'Proxima Nova'
			font-size 15px
			line-height 18px
			color $black

.photos-slider
	padding-bottom 30px

.services-slider, .photos-slider
	.slick-dots
		li
			margin 0 12px

			&.slick-active
				button
					background $yellow-button

		button
			width 30px
			height 30px
			background #d0d0d0
			border-radius 50%
			transition background .15s

			&:before
				content '' !important

			&:hover
				background $yellow-button

			&:active
				background $yellow

@media (max-width 992px)
	.services-list
		.services-headline
			padding 0 0 24px

		.services-text
			padding 0

	.photos-list
		li
			width: 33.33%;
			height: 33.33vw;

@media (max-width 820px)
	.services-list
		li
			width 50%

@media (max-width 600px)

	.services-list
		margin-bottom -36px

		li
			padding 0 12px 36px

		.services-image
			width 150px
			height 150px

	.consulting-list
		justify-content: center;
		padding-top 10px
		margin-bottom -20px

		li
			width 100%
			max-width none
			margin-bottom 40px

@media (max-width 768px)
	.photos-types
		li
			margin 0

	.team-slider
		margin 0 -15px

		&:after,
		&:before
			display none

		.slick-prev
			left 12px

		.slick-next
			right 12px

		.slick-active .team-content
			background $yellow

		.team-content
			min-height 0

		.team-photo
			font-size 0
			text-align center

			img
				display inline-block

	.photos-list
		li
			width: 50%;
			height: 50vw;

			a
				.icon
					transform scale(0.8) translate(-50%, -50%)
					transform-origin top left

				.photos-list-suggestion
					font-size 15px

@media (max-width 600px)
	.reviews-list
		li
			.reviews-avatar
				width 100%
				border none
				text-align center

				.reviews-avatar-image
					display inline-block

			.reviews-content
				width 100%
				padding 0
				text-align center

@media (max-width 460px)
	.services-list
		li
			width 100%

		.services-headline
			min-height 0
			padding-bottom 12px

	.services-slider
		.slick-next,
		.slick-prev
			display none
			opacity 0


	.photos-list
		li
			width: 100%;
			height: 100vw;
