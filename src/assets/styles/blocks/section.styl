.section
  padding 20px 0

  &.consulting-section
    padding-bottom 20px

  .section-header
    border-bottom 1px solid #b1b1b1
    text-align center
    margin-top -16px
    margin-bottom 36px

    h2
      display inline-block
      font-size 17px
      padding 4px 30px
      background $white
      color #b1b1b1
      position relative
      top 20px

  .section-next
    border-bottom 1px solid #b1b1b1
    text-align center
    margin 60px 0 24px


    .icon-next
      position absolute
      left 50%
      transform translate(-50%, -50%)

.section-contact-form
  padding 20px 0 30px
  background url('../images/content/contact-form-bg.jpg')
  background-repeat no-repeat
  background-size cover
  background-position center center

.section-photos
  .pager
    margin 24px 0 -6px
    text-align center

.section-reviews
  padding-bottom 30px

  .pager
    margin 0px 0 -6px
    text-align center

  .review-send
    text-align center
    margin 54px 0 0

#map
  width 100%
  height 550px
  margin-top 48px


.contacts-address
  text-align center
  margin 60px 0
  font-family Vollkorn
  font-size 20px
  line-height 26px

  a
    color $black
    text-decoration none
