#header
  width 100%
  height 100vh
  min-height 600px
  max-height 900px
  position relative
  background-image url('../images/content/header.jpg')
  background-repeat no-repeat
  background-size cover
  background-position center center
  background-attachment fixed

  .header-menu
    clearfix()

    .header-menu-list-mobile
      display none

    .header-menu-list-left,
    .header-menu-center,
    .header-menu-list-right
      float left

    .header-menu-list-left,
    .header-menu-list-right,
    .header-menu-list-mobile
      padding-top 90px

      li
        display inline-block

        a
          display inline-block
          position relative
          font-family 'Proxima Nova'
          font-size 15px
          color $white
          text-decoration none
          margin 0 15px

          &:after
            content ''
            background $yellow
            width 100%
            height 2px
            position absolute
            left 0
            bottom 0
            opacity 0
            transition opacity .15s

          &:hover, &.active
            color $yellow

            &:after
              opacity 1

    .header-menu-list-left
      width calc(50% - 125px)

    .header-menu-list-right
      text-align right
      width calc(50% - 125px)

    .header-menu-center
      width 250px
      padding-top 45px
      text-align center

      .header-logo
        display inline-block
        sprite($s-logo)

      .header-languages
        margin 12px auto 0

        li
          display inline-block

          a
            display inline-block
            color $white
            font-family 'Proxima Nova'
            text-decoration none
            font-size 16px
            line-height 18px
            padding 3px
            margin 0 8px
            transition none

            &:hover, .active
              background $yellow
              color $gray

  .header-quote
    width 100%
    max-width 800px
    font-size 20px
    line-height 30px
    font-family Vollkorn
    color $white
    position absolute
    bottom 120px
    left 50%
    transform translate(-50%, 0)
    text-align center
    padding 0 15px
    box-sizing border-box

    .quote
      font-size 78px
      line-height 24px
      color $white
      position relative
      top 36px
      left -2px

@media (max-width 1100px)
  #header .header-menu .header-menu-list-left li a, #header .header-menu .header-menu-list-right li a
    margin 0 8px

@media (max-width 992px)
  #header
    background-attachment scroll

@media (max-width 600px)
  #header .header-menu .header-menu-list-left li, #header .header-menu .header-menu-list-right li
    display block

  #header
    .header-menu
      .header-menu-center
        width 150px

        .header-logo
          transform scale(.6)
          transform-origin top left

        .header-languages
          margin-top -36px

      .header-menu-list-left,
      .header-menu-list-right
        padding-top 60px
        width calc(50% - 75px)

    .header-quote
      font-size 15px
      line-height 20px

@media (max-width 500px)
  #header
    height 100%

    .header-menu
      .header-menu-list-left,
      .header-menu-list-right
        visibility hidden

      .header-menu-list-mobile
        padding-top 20px
        display block
        text-align center

        li a
          margin 0 5px
          font-size 14px

    .header-quote
      bottom 70px
